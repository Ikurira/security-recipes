# Newsboat Configuration for Security Recipes

# Auto-reload feeds every 30 minutes
auto-reload yes
reload-time 30
reload-threads 4

# Browser for opening articles
browser "xdg-open %u"

# Article list format
articlelist-format "%4i %f %D  %?T?|%-17T| ?%t"

# Feed list format
feedlist-format "%4i %n %11u %t"

# Color scheme (dark theme to match app)
color background          default   default
color listnormal          white     default
color listnormal_unread   white     default bold
color listfocus           black     cyan
color listfocus_unread    black     cyan bold
color info                cyan      black bold
color article             white     default

# Key bindings
bind-key j down
bind-key k up
bind-key J next-feed articlelist
bind-key K prev-feed articlelist
bind-key G end
bind-key g home
bind-key l open
bind-key h quit

# Show read articles
show-read-articles yes
show-read-feeds yes

# Max items per feed
max-items 100

# Notify on new articles
notify-program notify-send
notify-always yes
notify-format "Newsboat: %n unread articles (%n unread feeds)"
